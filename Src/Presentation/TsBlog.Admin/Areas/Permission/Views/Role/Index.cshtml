@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div class="layui-fluid">
        <blockquote class="layui-elem-quote">
            <form class="layui-form">
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">角色名称:</label>
                        <div class="layui-input-inline">
                            <input name="RoleName" id="RoleName" class="layui-input" placeholder="请输入角色名称" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <button type="button" class="layui-btn layui-btn-radius" lay-filter="roleTbSearch" lay-submit="" id="btnSearch">
                                <i class="layui-icon layui-icon-search"></i>搜索
                            </button>
                            <button type="button" class="layui-btn layui-btn-radius" id="btnAdd">
                                <i class="layui-icon layui-icon-addition"></i>添加
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </blockquote>
        <table class="layui-hide" id="tbRole" lay-filter="tbRole"></table>
    </div>
    <script type="text/html" id="actionToolbar">
        <a class="layui-btn layui-btn-normal layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/js/common.js"></script>
    <script>
        layui.use(['form', 'layer', 'element', 'table', 'laytpl', 'util', 'jquery'], function () {
            var form = layui.form;
            var layer = layui.layer;
            var element = layui.element;
            var table = layui.table;
            var laytpl = layui.laytpl;
            var util = layui.util;
            var $ = layui.jquery;

            table.render({
                id: 'tbRoleList',
                elem: '#tbRole',
                url: '/Permission/Role/GetRoleList',
                page: true,
                cols: [[
                    { field: 'Id', title: 'ID', width: 100, align: 'center', sort: true },
                    { field: 'RoleCode', title: '角色代码' },
                    { field: 'RoleName', title: '角色名称', width: 100, },
                    { field: 'Remark', title: '备注' },
                    {
                        field: 'Status', title: '状态', width: 100, align: 'center', templet: function (d) {
                            if (d.Status == 1) {
                                return '<span class="layui-badge layui-bg-green">启用</span>'
                            } else {
                                return '<span class="layui-badge">禁用</span>'
                            }
                        }
                    },
                    { field: 'CreateBy', title: '创建人', width: 100 },
                    {
                        field: 'CreateOn', title: '创建时间', sort: true, templet: function (d) {
                            return formatTime(d.CreateOn);
                        }
                    },
                    { field: 'UpdateBy', title: '更新人', width: 100 },
                    {
                        field: 'UpdateOn', title: '更新时间', sort: true, templet: function (d) {
                            return formatTime(d.UpdateOn);
                        }
                    },
                    { title: '操作', align: 'center', templet: '#actionToolbar' }
                ]]
            });

            form.on('submit(roleTbSearch)', function (data) {
                var field = data.field;
                table.reload('tbRoleList', {
                    where: {
                        RoleName: field.RoleName
                    },
                    page: {
                        curr: 1
                    }
                });
            })

            function showEditForm(mData) {
                layer.open({
                    type: 2,
                    title: (mData ? '编辑' : '添加') + '角色',
                    shade: 0.3,
                    area: ['670px', '250px'],
                    content: (mData ? '/Permission/Role/Edit?id=' + mData.Id : '/Permission/Role/Add')
                })
            }

            $('#btnAdd').click(function () {
                showEditForm();
            })

            table.on('tool(tbRole)', function (obj) {
                var data = obj.data;
                if (obj.event === 'edit') {
                    showEditForm(data);
                } else if (obj.event === 'del') {
                    layer.confirm('确定要删除"' + obj.data.RoleName + '"吗?', { icon: 3, title: '提示' }, function (index) {
                        $.ajax({
                            url: '/Permission/Menu/Delete',
                            data: { id: obj.data.Id },
                            type: 'post',
                            dataType: 'json',
                            success: function (res) {
                                if (res.code == 1) {
                                    layer.msg(res.tip, { icon: 1 });
                                    obj.del();
                                    layer.close(index);
                                } else {
                                    layer.msg(res.tip, { icon: 2 });
                                }
                            }
                        })
                    })
                }
            })
        });
    </script>
</body>
</html>
