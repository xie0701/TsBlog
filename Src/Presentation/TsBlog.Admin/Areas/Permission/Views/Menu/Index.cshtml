@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div class="layui-fluid">
        <blockquote class="layui-elem-quote">
            <form class="layui-form">
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">菜单名称:</label>
                        <div class="layui-input-inline">
                            <input name="MenuName" id="MenuName" class="layui-input" placeholder="请输入菜单名称" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <button type="button" class="layui-btn layui-btn-radius" lay-filter="menuTbSearch" lay-submit="" id="btnSearch">
                                <i class="layui-icon layui-icon-search"></i>搜索
                            </button>
                            <button type="button" class="layui-btn layui-btn-radius" id="btnAdd">
                                <i class="layui-icon layui-icon-addition"></i>添加
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </blockquote>
        <table class="layui-hide" id="tbMenu"></table>
    </div>
    <script type="text/html" id="actionToolbar">
        <a class="layui-btn layui-btn-normal layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/js/common.js"></script>
    <script>
        layui.config({
            base: '/Content/layui/extend/'
        }).use(['form', 'layer', 'element', 'treeTable', 'laytpl', 'util', 'jquery'], function () {
            var form = layui.form;
            var layer = layui.layer;
            var element = layui.element;
            var treeTable = layui.treeTable;
            var laytpl = layui.laytpl;
            var util = layui.util;
            var $ = layui.jquery;

            var insTb = treeTable.render({
                elem: '#tbMenu',
                method: 'post',
                url: '/Permission/Menu/GetMenuList',
                tree:{
                    iconIndex:1,
                    idName:'Id',
                    pidName:'ParentId',
                    isPidData: true,
                    openName: 'Status'
                },
                cols: [
                    { field: 'Id', title: 'Id', width: 100, type: 'numbers' },
                    { field: 'MenuName', title: '菜单名称' },
                    { field: 'MenuUrl', title: '菜单路径' },
                    { field: 'Icon', title: '图标', width: 100, align: 'center', templet: '<div><i class="layui-icon {{d.Icon}}"></i></div>' },
                    { field: 'OrderNo', title: '排序号', width: 100 },
                    {
                        field: 'CreateOn', title: '创建时间', templet: function (d) {
                            return formatTime(d.CreateOn);
                        }
                    },
                    {
                        field: 'Status', title: '状态', width: 100, align: 'center', templet: function (d) {
                            if (d.Status == 1) {
                                return '<span class="layui-badge layui-bg-green">启用</span>'
                            } else {
                                return '<span class="layui-badge">禁用</span>'
                            }
                        }
                    },
                    { title: '操作', templet: '#actionToolbar', align: 'center' }
                ]
            });

            form.on('submit(menuTbSearch)', function (data) {
                var field = data.field;
                for (var f in field) {
                    if (field[f]) {
                        insTb.filterData(field[f]);
                    } else {
                        insTb.clearFilter();
                    }
                }
                return false;
            })

            function showEditForm(mData) {
                layer.open({
                    type: 2,
                    title: (mData ? '编辑' : '添加') + '菜单',
                    shade: 0.3,
                    area: ['670px', '360px'],
                    content: (mData ? '/Permission/Menu/Edit?id=' + mData.Id : '/Permission/Menu/Add')
                })
            }

            $('#btnAdd').click(function () {
                showEditForm();
            })

            treeTable.on('tool(tbMenu)', function (obj) {
                if (obj.event == 'edit')
                    showEditForm(obj.data);
                else if (obj.event == 'del') {
                    layer.confirm('确定要删除"' + obj.data.MenuName + '"吗？', function (index) {
                        $.ajax({
                            url: '/Permission/Menu/Delete',
                            data: { id: obj.data.Id },
                            type: 'post',
                            dataType: 'json',
                            success: function (res) {
                                if (res.code == 1) {
                                    layer.msg(res.tip, { icon: 1 });
                                    insTb.refresh();
                                } else {
                                    layer.msg(res.tip, { icon: 2 });
                                }
                            }
                        })
                    })
                }
            })

            form.render('select');
        });
    </script>
</body>
</html>
